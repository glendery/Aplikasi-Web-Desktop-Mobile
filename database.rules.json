{
  "rules": {
    ".read": true,
    ".write": true,
    "bedas_survey_stats": {
      "$id": {
        ".write": "!data.exists() && newData.exists()"
      }
    },
    "bedas_surveys": {
      ".write": true
    },
    "bedas_submissions": {
       ".write": true,
       ".indexOn": ["ts"]
    },
    "bedas_survey_aggregates": {
       "total": { ".validate": "newData.isNumber()" },
       "puas": { ".validate": "newData.isNumber()" },
       "cukup": { ".validate": "newData.isNumber()" },
       "kurang": { ".validate": "newData.isNumber()" }
    }
  }
}
